<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/admissionback"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <de.hdodenhof.circleimageview.CircleImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:id="@+id/iv_adphoto"
            android:layout_marginLeft="130dp"
            android:layout_marginTop="30dp"
            android:onClick="addphoto"
            android:background="@drawable/ic_action_camera"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_below="@+id/iv_adphoto"
            android:layout_marginTop="30dp"
            android:layout_marginRight="30dp"
            android:layout_marginLeft="15dp"
            android:hint="Enter Your Name"
            android:textSize="20dp"
            android:id="@+id/et_adname"
            android:background="#EFEFF3"/>



        <EditText
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="20dp"
        android:layout_marginRight="30dp"
        android:layout_below="@+id/et_adname"
        android:layout_marginLeft="15dp"
        android:hint="Enter Father Name"
        android:textSize="20dp"
        android:id="@+id/adfname"
        android:background="#EFEFF3"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/adfname"
            android:layout_marginLeft="15dp"
            android:hint="Enter Subject"
            android:textSize="20dp"
            android:id="@+id/tesub"
            android:background="#EFEFF3"/>



        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/tesub"
            android:layout_marginLeft="15dp"
            android:hint="Enter Qualification"
            android:textSize="20dp"
            android:id="@+id/tequalification"
            android:background="#EFEFF3"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:inputType="textPostalAddress"
            android:layout_below="@+id/tequalification"
            android:layout_marginLeft="15dp"
            android:hint="Enter Address"
            android:textSize="20dp"
            android:id="@+id/et_adaddress"
            android:background="#EFEFF3"/>

        <Spinner
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/spin_adcast"
            android:background="#EFEFF3"
            android:layout_below="@+id/et_adaddress"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>
        <Spinner
            android:layout_width="150dp"
            android:layout_height="40dp"
            android:id="@+id/spin_gender"
            android:background="#EFEFF3"
            android:layout_below="@+id/et_adaddress"
            android:layout_toRightOf="@id/spin_adcast"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"/>
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="textEmailAddress"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/spin_adcast"
            android:layout_marginLeft="15dp"
            android:hint="Enter Email Address"
            android:textSize="20dp"
            android:id="@+id/et_ademail"
            android:background="#EFEFF3"
            />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:inputType="phone"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/et_ademail"
            android:layout_marginLeft="15dp"
            android:hint="Enter mobile Number"
            android:textSize="20dp"
            android:id="@+id/et_admobile"
            android:background="#EFEFF3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:layout_below="@+id/et_admobile"
            android:layout_marginLeft="15dp"
            android:hint="Enter date Of Birth (DD/MM/YYYY)"
            android:textSize="20dp"
            android:id="@+id/et_addob"
            android:background="#EFEFF3"
            />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:layout_marginRight="30dp"
            android:inputType="number"
            android:layout_below="@+id/et_addob"
            android:layout_marginLeft="15dp"
            android:hint="Enter Aadhaar Card Number"
            android:textSize="20dp"
            android:id="@+id/et_adhar"
            android:background="#EFEFF3"
            />

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_adhar"
            app:cardCornerRadius="25dp"
            android:theme="@style/CardView"
            android:layout_marginTop="30dp"
            android:layout_marginBottom="30dp"
            app:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#F505B9"
            android:id="@+id/stcardview"
            android:onClick="addteacher">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_card_stlog"
                    android:text="Add Teacher"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>

</ScrollView>