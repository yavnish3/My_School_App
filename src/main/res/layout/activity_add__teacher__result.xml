<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/admissionback"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:android="http://schemas.android.com/apk/res/android">

        <TextView
            android:id="@+id/tv_addhomework"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="40dp"
            android:fontFamily="monospace"
            android:gravity="center"
            android:text="Add Result"
            android:textColor="@color/colorAccent"
            android:textSize="40dp"
            android:textStyle="bold" />
        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#EDEDF5"
            android:hint="Type Of Test"
            android:gravity="center"
            android:textColorHint="#00f"
            android:textSize="30dp"
            android:layout_below="@+id/tv_addhomework"
            android:layout_marginTop="40dp"
            android:id="@+id/et_noticetitle"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#EDEDF5"
            android:hint="Subject"
            android:gravity="center"
            android:id="@+id/et_noticedis"
            android:textColorHint="#00f"
            android:textSize="30dp"
            android:layout_below="@+id/et_noticetitle"
            android:layout_marginTop="40dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#EDEDF5"
            android:hint="Marks Obtained"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/et_obmrk"
            android:textColorHint="#00f"
            android:textSize="30dp"
            android:layout_below="@+id/et_noticedis"
            android:layout_marginTop="40dp"/>

        <EditText
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:background="#EDEDF5"
            android:hint="Total Marks"
            android:gravity="center"
            android:inputType="number"
            android:id="@+id/et_ttlmrk"
            android:textColorHint="#00f"
            android:textSize="30dp"
            android:layout_below="@+id/et_obmrk"
            android:layout_marginTop="40dp"/>

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_ttlmrk"
            app:cardCornerRadius="25dp"
            android:theme="@style/CardView"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#4CB626"
            android:id="@+id/stcardview"
            android:layout_marginBottom="30dp"
            android:onClick="addResult">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_card_stlog"
                    android:text="Add Result"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>

    </RelativeLayout>
</ScrollView>