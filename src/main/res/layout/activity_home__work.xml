<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@drawable/admissionback"
    xmlns:android="http://schemas.android.com/apk/res/android">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="center"
        android:layout_marginTop="-30dp">

        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:layout_below="@+id/btn1"
            android:theme="@style/CardView"
            android:layout_marginTop="60dp"
            app:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#4CB626"
            android:id="@+id/stcardview"
            android:onClick="addnewhomework">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_card_stlog"
                    android:text="Add New Home Work"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            app:cardCornerRadius="25dp"
            android:theme="@style/CardView"

            app:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#D8CE16"
            android:id="@+id/stcardview1"
            android:onClick="addnewhomework">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:gravity="center">
               <TextView
                   android:layout_width="wrap_content"
                   android:layout_height="wrap_content"
                   android:text="Class:-  "
                   android:id="@+id/clsfix"
                   android:layout_marginRight="10dp"
                   android:textSize="25dp"
                   android:textStyle="bold"
                   android:textColor="#fff"
                   />
                <Spinner
                    android:layout_width="150dp"
                    android:layout_height="40dp"
                    android:id="@+id/spinclass"
                    style="@style/radio_color"
                    android:layout_toRightOf="@id/clsfix"
                    android:layout_marginLeft="10dp" />
            </RelativeLayout>
        </android.support.v7.widget.CardView>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/stcardview1"
            android:layout_marginTop="40dp"
            android:textAllCaps="false"
            android:text="Show"
            android:layout_centerHorizontal="true"
            android:onClick="showwork"
            android:elevation="15dp"
            android:textSize="30dp"
            android:background="#03A9F4"
            android:textColor="#FDFAFA"
            android:id="@+id/btn1"
            />

    </RelativeLayout>

</ScrollView>