<ScrollView android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_gravity="center"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/tv_stwel"
            android:textSize="30dp"
            android:text="Welcome Back,"
            android:layout_below="@+id/iv_stlogo"
            android:layout_marginLeft="30dp"
            android:textColor="@color/colorAccent"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/tv_stwel"
            android:textSize="20dp"
            android:text="Sign In To Continue"
            android:layout_marginLeft="35dp"
            android:id="@+id/tv_stconti"
            android:textColor="#00f"/>
        <ImageView
            android:layout_width="150dp"
            android:layout_height="150dp"
            android:src="@drawable/logo"
            android:id="@+id/iv_stlogo" />
        <ProgressBar
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="50dp"
            android:visibility="gone"
            android:layout_below="@+id/tv_stconti"
            android:id="@+id/progmng"/>

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Email"
            android:textSize="25dp"
            android:layout_below="@id/tv_stconti"
            android:layout_marginTop="140dp"
            android:id="@+id/tv_stuserid"
            android:textColor="#0A0A0A"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:inputType="textEmailAddress"
            android:drawableLeft="@drawable/ic_action_userid"
            android:layout_below="@id/tv_stuserid"
            android:id="@+id/et_userid"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Password"
            android:textSize="25dp"
            android:layout_below="@id/et_userid"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_stuserpass"
            android:textColor="#0A0A0A"
            android:textStyle="bold"
            android:layout_marginLeft="30dp"
            />
        <EditText
            android:layout_width="250dp"
            android:layout_height="wrap_content"
            android:layout_marginLeft="30dp"
            android:inputType="textPassword"
            android:drawableLeft="@drawable/ic_action_password"
            android:layout_below="@id/tv_stuserpass"
            android:id="@+id/et_userpass"/>
        <android.support.v7.widget.CardView
            android:layout_width="300dp"
            android:layout_height="50dp"
            android:layout_below="@id/et_userpass"
            app:cardCornerRadius="25dp"
            android:theme="@style/CardView"
            android:layout_marginTop="30dp"
            app:cardElevation="10dp"
            android:layout_centerHorizontal="true"
            app:cardBackgroundColor="#F505B9"
            android:id="@+id/stcardview"
            android:onClick="login">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent">
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:id="@+id/tv_card_stlog"
                    android:text="Login"
                    android:textColor="#fff"
                    android:textSize="25dp"
                    android:textStyle="bold"
                    android:layout_centerInParent="true"/>
            </RelativeLayout>
        </android.support.v7.widget.CardView>
    </RelativeLayout>



</ScrollView>