<android.support.v7.widget.CardView android:layout_width="match_parent"
    android:layout_height="wrap_content"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_marginLeft="20dp"
    android:layout_marginRight="20dp"
    android:layout_below="@+id/stcardview"
    android:layout_marginTop="40dp"
    android:elevation="10dp"
    android:id="@+id/cardview"
    app:cardCornerRadius="20dp"
    xmlns:android="http://schemas.android.com/apk/res/android">
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Test Type"
            android:gravity="center"
            android:textColor="#08630C"
            android:layout_marginLeft="10dp"
            android:layout_marginTop="5dp"
            android:textStyle="bold"
            android:textSize="26dp"
            android:id="@+id/tv_tsty"/>
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="30dp"
            android:text="Subject:-"
            android:textColor="#D50525"
            android:gravity="center"
            android:layout_below="@id/tv_tsty"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:id="@+id/sub"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Subject"
            android:textColor="#D50525"
            android:gravity="center"
            android:layout_below="@id/tv_tsty"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/sub"
            android:layout_marginLeft="15dp"
            android:textSize="22dp"
            android:layout_marginTop="5dp"
            android:id="@+id/tv_sub"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Marks Obtain:-"
            android:gravity="center"
            android:textColor="#00f"
            android:layout_below="@id/tv_sub"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:id="@+id/mrkob"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Marks Obtain"
            android:gravity="center"
            android:layout_below="@id/tv_sub"
            android:textStyle="bold"
            android:layout_toRightOf="@+id/mrkob"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_mrkob"/>
        <TextView
            android:layout_width="150dp"
            android:layout_height="30dp"
            android:text="Total Marks:-"
            android:textColor="#00f"
            android:gravity="center"
            android:layout_below="@id/tv_mrkob"
            android:textStyle="bold"
            android:layout_marginLeft="10dp"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tlmrk"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="30dp"
            android:text="Total Marks"
            android:gravity="center"
            android:layout_below="@id/tv_mrkob"
            android:textStyle="bold"
            android:layout_marginLeft="25dp"
            android:layout_toRightOf="@+id/tlmrk"
            android:textSize="22dp"
            android:layout_marginTop="20dp"
            android:id="@+id/tv_tlmrk"/>


        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:text="14:52-29/07/2019"
            android:layout_below="@id/tv_tlmrk"
            android:layout_marginRight="5dp"
            android:textStyle="bold"
            android:id="@+id/time"
            android:layout_marginTop="8dp"
            android:layout_marginBottom="5dp"
            android:textColor="@color/colorAccent"/>
    </RelativeLayout>
</android.support.v7.widget.CardView>